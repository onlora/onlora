# PostgreSQL Database Connection
# Note: DATABASE_URL is usually constructed in docker-compose.yml from these:
POSTGRES_DB=onlora_db
POSTGRES_USER=onlora_user
POSTGRES_PASSWORD=yoursecurepassword

# Backend API Configuration
PORT=8080
JWT_SECRET=averysecuresecretkeyforlocaldvelopmentchangethis
# Used by better-auth redirects, set to the backend's public URL in deployment
NEXTAUTH_URL=http://localhost:8080 
AUTH_TRUST_HOST="true" # Or your frontend's domain in production

# Google OAuth Credentials (obtain from Google Cloud Console)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Cloudflare R2 Storage Configuration
R2_BUCKET_NAME=
R2_ACCOUNT_ID=
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
R2_PUBLIC_URL_BASE= # e.g., https://<your-bucket>.<your-account-id>.r2.cloudflarestorage.com or your custom domain mapped to the bucket

# OpenAI API Key
OPENAI_API_KEY=
OPENAI_BASE_URL=

# Google Generative API Key
GOOGLE_GENERATIVE_AI_API_KEY=

# Logging Level (Optional - defaults to info)
LOG_LEVEL=info 